<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:layout_height="wrap_content" android:text="@string/menu_title" android:id="@+id/textView1" android:layout_margin="30dip" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:ellipsize="none"></TextView>
    <Button android:id="@+id/button1" android:layout_height="wrap_content" android:text="@string/start_btn" android:layout_margin="30dip" android:layout_width="match_parent" android:onClick="onStartClick()"></Button>
    <Button android:id="@+id/button2" android:layout_height="wrap_content" android:text="@string/quit_btn" android:layout_margin="30dip" android:layout_width="match_parent"></Button>
</LinearLayout>
